# Disable directory listing (security)
Options -Indexes

RewriteEngine On

# Remover index.php da URL
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Headers de Segurança
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    # Allow iframe ONLY for the captcha embed route; keep DENY everywhere else
    SetEnvIf Request_URI "^/embed\.html$" ALLOW_IFRAME=1
    Header always set X-Frame-Options "DENY" env=!ALLOW_IFRAME
    Header always set X-Frame-Options "SAMEORIGIN" env=ALLOW_IFRAME
    Header always set Content-Security-Policy "frame-ancestors 'self'" env=ALLOW_IFRAME
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    # HSTS (apenas quando sob HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    # Additional hardening headers
    Header always set X-Permitted-Cross-Domain-Policies "none"
    Header always set X-Download-Options "noopen"
    # CSP (Report-Only) to validate allowed sources before enforcing
    # Temporarily allow 'unsafe-inline' for scripts while we migrate inline JS to external files
    Header always set Content-Security-Policy-Report-Only "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google.com https://www.gstatic.com https://s3.tradingview.com https://cdn.jsdelivr.net https://code.jquery.com https://cdn.sheetjs.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://use.typekit.net; img-src 'self' data: blob: https:; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net https://use.typekit.net data:; connect-src 'self' https://news-operebem.up.railway.app https://www.google-analytics.com https://www.googletagmanager.com https://cdn.jsdelivr.net https://servicodados.ibge.gov.br wss://vps1.operebem.com; frame-src 'self' https://www.google.com https://www.tradingview-widget.com https://s.tradingview.com https://sslecal2.investing.com; object-src 'none'; base-uri 'self'; form-action 'self'; report-uri /csp-report"
</IfModule>


# GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml application/rss+xml image/svg+xml
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent env=!dont-vary
</IfModule>

# Cache para assets estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 week"
    
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>
