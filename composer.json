{
    "name": "operebem/terminal",
    "description": "Terminal Operebem - Sistema de Análise Financeira",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "ezyang/htmlpurifier": "^4.18",
        "firebase/php-jwt": "^6.11",
        "giggsey/libphonenumber-for-php": "^9.0",
        "monolog/monolog": "^3.9",
        "nesbot/carbon": "^3.10",
        "phpmailer/phpmailer": "^6.10",
        "simshaun/recurr": "^5.0",
        "stripe/stripe-php": "^13.0",
        "symfony/http-foundation": "^7.3",
        "symfony/property-access": "^7.3",
        "symfony/validator": "^7.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "audit": {
            "ignore": {
                "PKSA-365x-2zjk-pt47": "Temporarily permitido até atualização do Symfony."
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
